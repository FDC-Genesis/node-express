<%- include('../../Defaults/header') %>
<div class="container mt-5">
    <div class="d-flex justify-content-evenly align-items-center">
        <h1>User List</h1>
        <div>
            <%
                const redirection = !auth().check() ? 'login':'logout';
            %>
            <a href="/<%= redirection %>" class="btn btn-sm btn-primary text-capitalize"><%= redirection %></a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Username</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through your user data here -->
            <!-- Example: -->
            <% if (data.User && data.User.length > 0) {
                data.User.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td><%= user.username %></td>
                        <td><%= user.created_at %></td>
                        <td><%= user.updated_at %></td>
                    </tr>
                <% });
            } else { %>
                <tr>
                    <td colspan="5">No users found.</td>
                </tr>
            <% } %>
            %> 
           
        </tbody>
    </table>

    <div>
        <!-- Insert your pagination links here -->
        <!-- Example: -->
        
        <%- data.links %>
       
    </div>
</div>

<%- include('../../Defaults/footer') %>
